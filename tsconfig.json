{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "typeRoots": ["src/types", "./node_modules/@types"],
    "baseUrl": "../.."
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
